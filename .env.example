# WhispyrKeep Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
POSTGRES_DB=whispyrkeep
POSTGRES_USER=whispyrkeep
POSTGRES_PASSWORD=changeme

# =============================================================================
# Django Settings
# =============================================================================
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:4200

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# ChromaDB
# =============================================================================
CHROMA_URL=http://chromadb:8000

# =============================================================================
# LLM Configuration (BYO-Key)
# =============================================================================
# Default model for new users (can be overridden per-user)
LLM_DEFAULT_MODEL=gpt-4

# =============================================================================
# Security
# =============================================================================
# Key Management Service secret for API key encryption
KMS_SECRET=your-kms-secret-change-in-production
